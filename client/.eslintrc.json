 {
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    // "extends": ["eslint:recommended", "plugin:react/recommended"
    // ],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "eqeqeq": 2,
        "prefer-const":  ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "indent": ["error", 4]
    }
}